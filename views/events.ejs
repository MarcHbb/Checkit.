<% include shared/header.ejs %>

<% include shared/menu.ejs %>


<% if(locals.errors) {
  errors.forEach(function(err) { %>
    <div class="alert alert-danger">
      <%= err.msg %>
    </div>
  <% });
} %>

<h2 class="page-header">Events</h2>
<form method="post" action="/events">
  <div class="form-group">
    <label>Name of the event</label>
    <input type="text" class="form-control" placeholder="Name" name="eventName">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" class="form-control" placeholder="Category" name="category">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="text" class="form-control" placeholder="Description" name="desc">
  </div>
  <div class="form-group">
    <label>Versus</label>
    <input type="text" class="form-control" placeholder="2vs2" name="versus">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>


<% include shared/footer.ejs %>
