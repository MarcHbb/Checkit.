<div class="row events-row">
    <div class="row text-center">
        <h1>Derniers Evenements</h1>
        <hr>
    </div>
    <div class="row">

        <% if(locals.list) {
          for (let i = 0; i < locals.list.length; i++){ %>

        <div class="col-lg-4 col-md-4 col-sm-4 check-events-card">
            <div class="check-header-card ex1 text-center">
            </div>
            <div class="check-card-content">
              <h3 class="check-card-title text-center">
                <%= locals.list[i].eventName %>
              </h3>
              <h4 class="check-card-title text-center">
                [<%= locals.list[i].category %>] - [<%= locals.list[i].versus %>]
              </h4>
                <span><%= locals.list[i].desc %> </span>
                <div class="row text-center">
                    <button type="button" class="check-button">Check !t.</button>
                    <a href="" class="check-card-icon">
